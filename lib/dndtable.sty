% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{8pt}
	\noindent
	\scalysans\bfseries\scshape
	#1}}

% Table Environment
\newenvironment{dndtable}[1][XX]{
	\par\vspace*{8pt}
	\noindent
	\scalysans\selectfont %Select font
	\rowcolors{1}{}{commentgreen} % Alternate color and transparency
	\tabularx{\linewidth}{#1}
	}
	{\endtabularx\vspace{8pt plus 1pt}\noindent} 
