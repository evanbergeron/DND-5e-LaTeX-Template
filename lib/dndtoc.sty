\ExplSyntaxOn
\RequirePackage{titletoc}

% Makes the TOC go to section depth
\setcounter{tocdepth}{1}

\titlecontents{part}
  [0pt] % left
  {\DndFontTocPart} % above-code
  {\partname\ \thecontentslabel :~ } % numbered-entry-format
  {} % numberless-entry-format
  {} % filler-page-format
  [ \vspace{-.3ex} \titleline{ \color{titlegold} \titlerule[1pt] }\vspace{.3ex} ] % below-code

\titlecontents{chapter}
  [0pt] % left
  {\DndFontTocChapter} % above-code
  {Ch.\ \thecontentslabel :~ } % numbered-entry-format
  {} % numberless-entry-format
  {\titlerule*[5pt]{.}\contentspage} % filler-page-format

\titlecontents{section}
  [0pt] % left
  {\DndFontTocSection} % above-code
  {\thecontentslabel :~ } % numbered-entry-format
  {} % numberless-entry-format
  {\titlerule*[3pt]{.}\contentspage} % filler-page-format
