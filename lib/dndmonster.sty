    name=Dagger,
    enum* type={meleeorrangedweapon,meleeweapon,rangedweapon,meleeorrangedspell,meleespell,rangedspell},
    mod=+0,
    reach=5,
    range=20/60,
    minrange=,
    targets=one target,
    dmg=,
    dmgtype=,
    dmgwhen=,
    plusdmg=,
    plusdmgtype=,
    ordmg=,
    ordmgtype=,
    ordmgwhen=,
    hiteffect=,
    extra=,
    miss=,
    hitormiss=,
  ]{%
  \begin{monsteraction}[\commandkey{name}]
    \IfStrEqCase{\commandkey{type}}{%
      {meleeweapon}{\textit{\meleeweaponattackname:} \dnd@meleeattack{mod}{reach}}%
      {rangedweapon}{\textit{\rangedweaponattackname:} \dnd@rangedattack{mod}{range}{minrange}}%
      {meleespell}{\textit{\meleespellattackname:} \dnd@meleeattack{mod}{reach}}%
