      {meleeorrangedspell}{\textit{\meleeorrangedspellattackname:} \dnd@meleeorrangedattack{mod}{reach}{range}}%
    }[]%
    , \commandkey{targets}.
    \textit{\hitname:}\dnd@damage{dmg}{dmgtype}{dmgwhen}{ordmg}{ordmgtype}{ordmgwhen}{plusdmg}{plusdmgtype}{hiteffect}%
    \ifcommandkey{miss}{{ }\textit{\missname:} \commandkey{miss}}{}%
    \ifcommandkey{hitormiss}{{ }\textit{\hitormissname:} \commandkey{hitormiss}}{}%
    \ifcommandkey{extra}{{ }\commandkey{extra}}{}%
  \end{monsteraction}
}

