\newcommand{\dnd@hit}[1]{%
  \commandkey{#1}\ \tohitname%
}
\newcommand{\dnd@meleeattack}[2]{%
  \dnd@hit{#1}, \reachname\ \commandkey{#2} \ftname%
}
\newcommand{\dnd@rangedattack}[3]{%
  \dnd@hit{#1}, \rangename\ \commandkey{#2} \ftname\ifcommandkey{#3}{ %
  (\commandkey{#3})%
  }{}%
}
\newcommand{\dnd@meleeorrangedattack}[3]{%
  \dnd@hit{#1}, \reachname\ \commandkey{#2} \ftname\ or \rangename\ \commandkey{#3} \ftname%
}

\newcommand{\dnd@ifplusdmg}[2]{%
  \ifcommandkey{#1}{%
    { }plus \commandkey{#1}\ \commandkey{#2}\ \damagename%
  }{}%
}
\newcommand{\dnd@damage}[9]{%
  \ifcommandkey{#1}{%
    { }\commandkey{#1}\ \commandkey{#2}\ \damagename \ifcommandkey{#3}{{ }\commandkey{#3}}{}%
    \ifcommandkey{#4}{%
      , or \commandkey{#4}\ \ifcommandkey{#5}{%
        \commandkey{#5}%
      }{\commandkey{#2}%
      } \damagename\ \commandkey{#6}\ifcommandkey{#7}{,}{}%
    }{}\dnd@ifplusdmg{#7}{#8}%
    \ifcommandkey{#9}{%
      , \commandkey{#9}%
    }{.}%
  }{}%
}

